{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "rewriteRelativeImportExtensions": true,
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": ".",
        // NEW: Ignore the deprecation warning for 'baseUrl' until TypeScript 7.0.
        "ignoreDeprecations": "6.0",
        "paths": {
            "$lib": ["src/lib"],
            "$lib/*": ["src/lib/*"]
        }
    }
}
